{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Humon",
	"patterns": [{
			"include": "#node"
		}
	],

	"repository": {
		"comment": {
			"name": "comment",
			"match": "\\#.*$"
		},

		"unquotedValue": {
			"name": "string.unquoted.humon",
			"match": "[a-zA-Z0-9_]+"
		},

		"quotedValue": {
			"name": "string.quoted.double.humon",
			"begin": "\"",
			"end": "\"",
			"patterns": [{
					"name": "constant.character.escape.humon",
					"match": "\\\\."
				}
			]
		},

		"value": {
			"patterns": [{
					"include": "#unquotedValue"
				}, {
					"include": "#quotedValue"
				}
			]
		},

		"list": {
			"name": "meta.structure.array.humon",
			"begin": "\\[",
			"beginCaptures": {
				"0": { "name": "punctuation.definition.array.begin.humon" }
			},
			"end": "\\]",
			"endCaptures": {
				"0": { "name": "punctuation.definition.array.end.humon" }
			},
			"patterns": [{
					"include": "#node"
				}, {
					"include": "#comment"
				}
			]
		},

		"unquotedKey": {
			"match": "(\\w+)\\s*(\\:)",
			"captures": {
				"1": { "name": "support.type.property-name.humon" },
				"2": { "name": "punctuation.separator.dictionary.key-value.humon" }
			}
		},

		"quotedKey": {
			"match": "(\"\\w*\")\\s*(\\:)",
			"captures": {
				"1": { "name": "support.type.property-name.humon" },
				"2": { "name": "punctuation.separator.dictionary.key-value.humon" }
			},
			"patterns": [{
					"name": "constant.character.escape.humon",
					"match": "\\\\."
				}
			]
		},

		"key": {
			"patterns": [{
					"include": "#unquotedKey"
				}, {
					"include": "#quotedKey"
				}
			]
		},

		"keyValuePair": {
			"name": "meta.structure.dictionary.key-value.humon",
			"patterns": [{
					"include": "#key"
				}, {
					"include": "#node"
				}
			]
		},

		"dict": {
			"name": "meta.structure.dictionary.humon",
			"begin": "\\{",
			"beginCaptures": {
				"0": { "name": "punctuation.definition.dictionary.begin.humon" }
			},
			"end": "\\}",
			"endCaptures": {
				"0": { "name": "punctuation.definition.dictionary.end.humon" }
			},
			"patterns": [{
					"include": "#keyValuePair"
				}, {
					"include": "#comment"
				}
			]
		},

		"node": {
			"name": "meta.structure.node.humon",
			"patterns": [{
					"include": "#comment"
				}, {
					"include": "#value"
				}, {
					"include": "#list"
				}, {
					"include": "#dict"
				}
			]
		}
	},
	"scopeName": "source.humon"
}
